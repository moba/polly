<div class="jumbo show-listing">
  <div class="row">
    <div class="col-xs-9 col-xs-offset-0 col-sm-9 col-sm-offset-0 col-md-9 col-md-offset-0">
        <h3 class="title">Title: <strong>{{model.title}}</strong></h3>
        <div class="left">
          <div class="detail">
            Recipient: <strong>{{model.recipient}}</strong>
          </div>
          <div class="detail">
            Ends: <strong>{{moment-from-now model.ends}}</strong> ({{model.ends}})
          </div>
          <div class="detail">
            Value: <strong>{{model.value}}</strong> Euros
          </div>
        </div>
    </div>

    <div class="col-xs-2 col-xs-offset-1 col-sm-2 col-sm-offset-1 col-md-1 col-md-offset-2 align-middle text-center">
      <br/>
      <h2><b>{{model.votes}}</b></h2>
      Votes
    </div>
  </div>

  <div>
    <br/>
    <h4>Description:</h4>
    <p class="description">{{model.description}}</p>
    <br/>

    {{#if (eq currentUser.user.id "1")}}
      {{#if (eq model.moderated false)}}
        <br/>
        <button {{action 'moderate' model.id}} class="btn btn-primary btn-lg btn-block">Allow proposal</button>
      {{/if}}
    {{else}}
        <button {{action 'vote' model.id}} class="btn btn-primary btn-lg btn-block">Vote for this proposal</button>
    {{/if}}
  </div>
</div>
